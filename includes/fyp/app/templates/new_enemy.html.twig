{% extends 'layout.html.twig' %}
{% block title %} New Enemy - DM Friend {% endblock %}
{% block content %}
    <h3>{{ page_title }}</h3>
    <section id="new_enemy_section">
        <p style="color:red">{{ create_enemy_error }}</p>
        <form id="new_enemy_form" method="{{ method }}" action="{{ action }}">

            {# Form section for basic details #}
            <section id="enemy_details">
            <h3>Details:</h3>
            <label for="enemy_name">Name:</label>
            <br/>
            <input type="text" id="enemy_name" name="enemy_name" required>
            <br/>
            <label for="enemy_hp">Total HP:</label>
            <br/>
            <input type="text" id="enemy_hp" name="enemy_hp" required>
            <br/>
            <label for="enemy_ac">AC:</label>
            <br/>
            <input type="text" id="enemy_ac" name="enemy_ac" required>
            <br/>
            <label for="enemy_speed">Speed(ft):</label>
            <br/>
            <input type="text" id="enemy_speed" name="enemy_speed" title="walking(flying)" required>
            </section>

            <br/>

            {# Form section for ability scores #}
            <section id="ability_scores">
                <h3>Ability Scores:</h3>
                <label for="strength">Strength:</label>
                <br/>
                <input type="text" id="strength" name="strength">
                <br/>
                <label for="dexterity">Dexterity:</label>
                <br/>
                <input type="text" id="dexterity" name="dexterity">
                <br/>
                <label for="constitution">Constitution:</label>
                <br/>
                <input type="text" id="constitution" name="constitution">
                <br/>
                <label for="intelligence">Intelligence:</label>
                <br/>
                <input type="text" id="intelligence" name="intelligence">
                <br/>
                <label for="wisdom">Wisdom:</label>
                <br/>
                <input type="text" id="wisdom" name="wisdom">
                <br/>
                <label for="charisma">Charisma:</label>
                <br/>
                <input type="text" id="charisma" name="charisma">
                <br/><br/>
                <input class="create_item_button" type="submit" value="Continue">
            </section>
        </form>
    </section>
{% endblock %}
